---
import Head from "@components/Head.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import { SITE } from "@consts";

type Props = {
  title: string;
  description: string;
  isBlogPost?: boolean;
};

const { title, description, isBlogPost = false } = Astro.props;
---

<!doctype html>
<html lang="en" class={isBlogPost ? "blog-post" : ""}>
  <head>
    <Head title={`${title} | ${SITE.NAME}`} description={description} />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
